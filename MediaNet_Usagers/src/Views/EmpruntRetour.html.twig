{% extends 'Interface.html.twig' %}
   
{% block stylesheets %}
        <link href="../../src/css/empruntretour.css" type="text/css" rel="stylesheet" />
{% endblock %}

{% block content %}
    <div class="row">

        <div class="tab_droite">
            <table class="darkTable">
                <thead>
                    <tr>
                        <h1>Mes emprunts</h1>
                    </tr>
                    <tr>
                        <th>type</th>
                        <th>titre</th>
                        <th>date emprunt</th>
                        <th>date retour limite</th>
                    </tr>
                </thead>
                <tbody>
                {% for media in Emprunts %}
                {{ smedia }}
                {% if not media.date_retour %}
                    <tr>
                        <th>{{media.type}}</th>
                        <th>{{media.titre}}</th>
                        <th>{{media.date_emprunt}}</th>
                        <th>{{media.date_limite}}</th>
                    </tr>
                {% endif %}
                
                {% endfor %}
            </tbody>
            </table>
        </div>

        <div class="tab_gauche">

            <table class="darkTable">
                <thead>
                    <tr>
                        <h1>Mes retours</h1>
                    </tr>
                    <tr>
                        <th>type</th>
                        <th>titre</th>
                        <th>date retour</th>
                        <th>retard</th>
                    </tr>
                </thead>
                <tbody>
                {% for media in Emprunts %}
                {% if  media.date_retour %}
            
                    <tr>
                        <th>{{media.type}}</th>
                        <th>{{media.titre}}</th>
                        <th>{{media.date_retour}}</th>
                        {% if media.date_retour > media.date_limite %}
                        <th>&times;</th>
                        {% else %}
                        <th></th>
                        {% endif %}
                    </tr>
            {% endif %}
            
            {% endfor %}
            </tbody>
            </table>
        </div>


    </div>

{% endblock %}